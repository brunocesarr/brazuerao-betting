generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // or "mysql" or "sqlite"
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  password      String
  photoUrl      String?
  createdAt     DateTime       @default(now())
  bets          Bet[]
  userBetGroups UserBetGroup[]
}

model Bet {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  predictions Json // Array of {teamId: number, position: number}
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, year])
}

model BetGroup {
  id            String         @id @default(cuid())
  name          String         @unique
  userBetGroups UserBetGroup[]
}

model RoleGroup {
  id            String         @id @default(cuid())
  name          String         @unique
  userBetGroups UserBetGroup[]
}

model RequestStatus {
  id            String         @id @default(cuid())
  status        String         @unique // PENDING, APPROVED, REJECTED
  userBetGroups UserBetGroup[]
}

model UserBetGroup {
  groupId         String
  userId          String
  roleGroupId     String
  requestStatusId String
  createdAt       DateTime @default(now())

  group         BetGroup      @relation(fields: [groupId], references: [id], onDelete: Cascade)
  roleGroup     RoleGroup     @relation(fields: [roleGroupId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  requestStatus RequestStatus @relation(fields: [requestStatusId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}
