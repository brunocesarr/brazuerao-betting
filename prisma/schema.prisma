generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" or "sqlite"
}

model RoleGroup {
  id            String         @id @default(cuid())
  name          String         @unique // ADMIN, USER, ROOT

  userBetGroups UserBetGroup[]
}

model RequestStatus {
  id            String         @id @default(cuid())
  status        String         @unique // PENDING, APPROVED, REJECTED

  userBetGroups UserBetGroup[]
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  password      String
  photoUrl      String?
  emailVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt @default(now())

  bets          Bet[]
  userBetGroups UserBetGroup[]
  passwordResetTokens PasswordResetToken[]
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Bet {
  id          String    @id @default(cuid())
  userId      String
  groupId     String?
  predictions Json // Array of {teamId: number, position: number}
  season      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  group       BetGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model ScoringRule {
  id          String   @id @default(cuid())
  // Rule identification
  ruleType    String // e.g., "EXACT_CHAMPION", "EXACT_POSITION", "ZONE_MATCH"
  description String
  points      Int
  // Optional: additional conditions
  priority    Int      @default(0)
  ranges      Json? // Array of {rangeStart: number, rangeEnd: number}

  isDefault   Boolean  @default(true)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  scoringRuleBetGroups ScoringRuleBetGroup[]
}

model BetGroup {
  id                  String         @id @default(cuid())
  name                String         
  challenge           String?         
  isPrivate           Boolean        @default(true)
  allowPublicViewing  Boolean        @default(false)
  deadlineAt          DateTime       @default(now())
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt @default(now())

  userBetGroups UserBetGroup[]
  scoringRuleBetGroups ScoringRuleBetGroup[]
  bets Bet[]
}

model UserBetGroup {
  groupId         String
  userId          String
  requestStatusId String
  roleGroupId     String   
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt @default(now())

  group         BetGroup      @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  requestStatus RequestStatus @relation(fields: [requestStatusId], references: [id], onDelete: Cascade)
  roleGroup     RoleGroup     @relation(fields: [roleGroupId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model ScoringRuleBetGroup {
  groupId         String
  ruleId          String
  createdAt       DateTime    @default(now())

  group           BetGroup    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  scoringRule     ScoringRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)

  @@unique([groupId, ruleId])
}
